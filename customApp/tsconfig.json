{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "types": ["node", "webpack"],
    "typeRoots": ["node_modules/@types"],
    "removeComments": true,
    "sourceMap": true,
    "module": "es2015",
    "allowJs": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
